<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/schedulesTrainNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/train_name_temp"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/schedulesDepartureTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/departure_time_temp"
        android:textSize="14sp" />

    <!-- You can add more TextViews for other schedule information here -->

</LinearLayout>
