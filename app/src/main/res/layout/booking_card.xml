<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/cardReservationIdTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reservation ID"/>

    <TextView
        android:id="@+id/cardDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardReservationIdTextView"
        android:text="Date"/>

    <TextView
        android:id="@+id/cardFromToTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardDateTextView"
        android:text="Route"/>

    <TextView
        android:id="@+id/cardStatusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardFromToTextView"
        android:text="Status"/>

</LinearLayout>
