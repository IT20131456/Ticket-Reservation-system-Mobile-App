<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/scheduleDetailsButtonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/schedulesBackButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back_temp"
            android:layout_marginRight="20dp"
            android:layout_gravity="start"/>

        <TextView
            android:id="@+id/allSchedulesTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/all_schedules_layout_temp"
            android:layout_gravity="end"
            />

    </LinearLayout>

    <ListView
        android:id="@+id/scheduleListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/scheduleDetailsButtonLayout" />

</RelativeLayout>